<%= form_for(@user) do |f| %>

    <div style="background-color: #666666;" class="container-table">
      <div class="vertical-center-row">
        <div class="container">
          <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
              <div class="panel-heading">
                <div class="panel-title">Редактирование пользователя</div>
              </div>

              <div style="padding-top:30px" class="panel-body" >


                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form">

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <%= f.text_field :username, class: 'form-control', autofocus: true, placeholder: "Введите логин" %>
                  </div>

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-edit"></i></span>
                    <%= f.text_field :description, class: 'form-control', autocomplete: "off", placeholder: "Введите описание"%>
                  </div>


                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                    <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "Введите пароль"%>
                  </div>

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: "Повторите пароль"%>
                  </div>
                 

                  
                <div style="margin-bottom: 25px" class="input-group">
                   <div class="panel-title">Администратор</div>
                    <%= f.check_box :is_admin, autofocus: true%>
                  </div>


                  <div class="form-inline">
                    <%= f.submit "Сохранить", class: 'btn btn-primary' %>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

<% end %>

